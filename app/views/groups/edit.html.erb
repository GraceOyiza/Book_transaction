<div class="text-center mt-5 pt-5">
<%= form_for (@group) do |f| %>
    <div >
        <%= f.label :name, class:"font-weight-bold pb-3"  %>
         <%= f.text_field :name, autofocus: true, autocomplete: "username", placeholder: "Choose a book group", class: "form-control w-50 placeholder" %>
    </div>

    <div class="mt-3 pb-3">
        <%= f.label :icon , "Upload book icon" %>
        <%= f.file_field :icon %>
    </div>

    <%= f.submit "Update", class: "btn btn-success " %>
<% end %>
 
</div>