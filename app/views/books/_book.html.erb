<div class="d-flex shadow mx-3 my-2 custom-card bg-white p-2">
  <%= display_team_logo(book.groups.first, book) %>
  <div class="card-body d-flex flex-column justify-content-between">
    <div class="d-flex justify-content-between pb-1 light-border-bottom ">
      <p class="card-title light-text mb-0 "> <%= book.title %> </p>
      <p class="card-title text-color font-weight-bold">$ <%= book.amount %> </p>
    </div>
    <div class="">
    <p class="card-title light-text mb-0 ">Author: <%= book.creator.username %> </p>
    <p class="card-text light-text mb-3">Date created: <%= book.created_at.to_formatted_s(:long) %> </p>
    <%= link_to 'Delete', book_path(book), class: 'btn btn-danger', method: :delete%>
    </div>
  </div>
</div>